extends ../layout

block content
    style.
        form{
            border:3px double silver;
            padding: 5px;
            border-radius: 10px
        } 
    form.form.col-md-6.offset-md-3(action="/users/login" ,method="post")
       .form-group 
            label(for="Email") Email
            input.form-control(type="email",value=data?data['email']:"",name="email",placeholder="Email")
        .form-group 
            label(for="password") Password
            input.form-control(type="password",value=data?data['password']:"",name="password",placeholder="Password")
        .form-group 
                button.btn.btn-success(type="submit") Login
            